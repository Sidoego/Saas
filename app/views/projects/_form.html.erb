<%= form_for [:tenant, @project] do |f|%>
  <% if @project.errors.any? %>
    <div id="error_explanation " class="bg-warning">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title   %>
    <%= f.text_field :title , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :expected_complition_date %>
    <%= f.date_select :expected_complition_date, class: "form-control datepicker"  %>
  </div>

  <div class="control-group">
    <button class="btn btn-primary" type="submit">
    Create project
    </button>
  </div>

  <br>
  <%= f.hidden_field :tenant_id, value: params[:tenant_id],  class: "form-control"%>

<% end %>
